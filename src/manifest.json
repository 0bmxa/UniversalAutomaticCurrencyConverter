{
  "manifest_version": 2,
  "name": "Universal Automatic Currency Converter",
  "short_name": "Universal Currency Converter",
  "version": "2.3.1",
  "description": "Your new currency converter.",
  "author": "Baizey",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Custom Currency Converter",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "XRegExp.js",
        "Utils.js",
        "Browser.js",
        "CustomTag.js",
        "Blacklist.js",
        "Highlighter.js",
        "Localization.js",
        "CurrencyDetector.js",
        "CurrencyConverter.js",
        "NumberFormatter.js",
        "Engine.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "Utils.js",
      "background.js"
    ],
    "persistent": true
  },

  "options_page": "options/options.html",
  "options_ui": {
    "page": "options/options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{c1ae7a88-3721-459c-9f55-c527123c1859}",
      "strict_min_version": "57.0"
    }
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}